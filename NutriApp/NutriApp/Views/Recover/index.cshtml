<body class="blue lighten-1">
    <!-- Start Page Loading -->
    <!-- End Page Loading -->
 <div id="google_translate_element"></div>
    <script type="text/javascript">
function googleTranslateElementInit() {
  new google.translate.TranslateElement({pageLanguage: 'en', layout: google.translate.TranslateElement.InlineLayout.SIMPLE}, 'google_translate_element');
}
    </script>
    <script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>

    <div id="login-page" class="row">
        <div class="col s12 z-depth-4 card-panel">
            <form id="form1" name="form1" class="login-form" method="POST" action="requestPassword.asp?lg=0">
                <div class="row">
                    <div class="input-field col s12 center">
                        <img src="images/beckettLeagueLogo.gif" alt="" class="circle responsive-img valign profile-image-login">
                        <p class="center login-form-text">You can request your password either by entering your Username or your Email Address</p>

                    </div>
                </div>
                <div class="row margin">
                    <div class="input-field col s12">
                        <i class="mdi-social-person-outline prefix"></i>
                        <input id="username" type="text" name="username">
                        <label for="username" class="center-align">Username</label>
                    </div>
                </div>
                <div class="row margin">
                    <div class="input-field col s12">
                        <i class="mdi-communication-email prefix"></i>
                        <input id="emailAddy" type="text" name="emailAddy">
                        <label for="emailAddy">Email Adress</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12 center">
                        <button id="registerBtn" class="btn waves-effect waves-light center teal" type="submit" name="action">
                            Request Password

                        </button>
                    </div>
                    <div class="input-field col s12">
                        <p class="margin left medium-small sign-up">Already have an account? @Html.ActionLink("Login", "index", "Login", null, new { @class = "page-scroll" })</p>
                        <p class="margin right medium-small sign-up">Want to create an account? @Html.ActionLink("Register", "index", "Register", null, new { @class = "page-scroll" })</p>
                    </div>
                </div>
            </form>
        </div>
    </div>


    <!-- ================================================
      Scripts
      ================================================ -->
    <!-- jQuery Library -->
    <script type="text/javascript" src="js/jquery-1.11.2.min.js"></script>
    <!--materialize js-->
    <script type="text/javascript" src="js/materialize.js"></script>
    <!--prism-->
    <script type="text/javascript" src="js/prism.js"></script>
    <!--scrollbar-->
    <script type="text/javascript" src="js/plugins/perfect-scrollbar/perfect-scrollbar.min.js"></script>

    <!--plugins.js - Some Specific JS codes for Plugin Settings-->
    <script type="text/javascript" src="js/plugins.js"></script>

</body>

</html>

