@model List<NutriApp.Models.User>
@{
    ViewBag.Title = "UserAdmin";
}

<body>
    <div id="google_translate_element"></div>
    <script type="text/javascript">
function googleTranslateElementInit() {
  new google.translate.TranslateElement({pageLanguage: 'en', layout: google.translate.TranslateElement.InlineLayout.SIMPLE}, 'google_translate_element');
}
    </script>
    <script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
    <nav>
        <div class="nav-wrapper">
            <a href="#" class="brand-logo right">Logo</a>
            <ul id="nav-mobile" class="left hide-on-med-and-down">
                <li>@Html.ActionLink("Groups", "index", "GroupAdmin", null, new { @class = "page-scroll" })</li>
                <li>@Html.ActionLink("Users", "index", "UserAdmin", null, new { @class = "page-scroll" })</li>
                <li>@Html.ActionLink("Recetas", "index", "RecetasAdmin", null, new { @class = "page-scroll" })</li>
            </ul>
        </div>
        <div class="nav-content">
            <ul class="tabs tabs-transparent">
                <li class="tab"><a href="#test1">Citas</a></li>
                <li class="tab"><a href="#test2">Medidas</a></li>
                <li class="tab"><a href="#test4">Dieta</a></li>
            </ul>
        </div>
    </nav>
    <div id="test1" class="col s12">Citas</div>
    <div id="test2" class="col s12">Medidas</div>
    <div id="test3" class="col s12">Dieta</div>

    <div class="row">
        <div class="col-lg-12 text-center">
            <h1>Clinica Nutricional</h1>
            <h3>User Admin</h3>
            <ul class="list-unstyled"></ul>
        </div>
    </div>

    <div class="row">
        <div class="input-field col s6">
            <input value="#" id="Usuario" type="text" class="validate">
            <label class="active" for="Usuario">Usuario</label><a class="waves-effect waves-light btn">Buscar</a>
            <label class="active" for="Usuario">Usuario</label><a class="waves-effect waves-light btn">Agregar</a>
            <label class="active" for="Usuario">Usuario</label><a class="waves-effect waves-light btn">Eliminar</a>
        </div>
    </div>

    <table class="striped">
        <thead>
            <tr>
                <th>UserID</th>
                <th>Nombre</th>
                <th>Apellido</th>
            </tr>
        </thead>

        @* ***Add table content*** *@
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.UserID)</td>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Surname)</td>
            </tr>
            }
        </tbody>
    </table>

    <br />
    <br />

    <table class="striped">
        <thead>
            <tr>
                <th>UserID</th>
                <th>GroupID</th>
                <th>Fecha</th>
                <th>Peso</th>
                <th>IMC</th>
                <th>% Grasa</th>
                <th>% Musculo</th>
                <th>Edad Metabologica</th>
                <th>Grasa Viceral</th>
                <th>% Agua</th>
            </tr>
        </thead>

        @* ***Add table content*** *@
        <tbody>
           @foreach (var m in ViewBag.Measures as List<NutriApp.Models.Measure>)
            {
            <tr>
                <td>@(m.UserID)</td>
                <td>@(m.GroupID)</td>
                <td>@(m.Date)</td>
                <td>@(m.Weight)</td>
                <td>@(m.IMC)</td>
                <td>@(m.Fat_Percentage)</td>
                <td>@(m.Muscle_Percentage)</td>
                <td>@(m.Methabolic_Age)</td>
                <td>@(m.Viceral_Fat)</td>
                <td>@(m.Water_Percentage)</td>
            </tr>
           }
        </tbody>
    </table>

    <br />
    <br />

    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.0/Chart.bundle.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.0/Chart.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.0/Chart.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.0/Chart.min.js"></script>

    <canvas id="myChart" width="400" height="400"></canvas>
    <script>
var ctx = document.getElementById("myChart").getContext('2d');
var myChart = new Chart(ctx, {
    type: 'line',
    data: {
        labels: ["May'17", "June'17", "July'17"],
        datasets: [{
            label: 'Peso',
            data: [86, 84, 82],
            backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)'
            ],
            borderColor: [
                'rgba(255,99,132,1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)'
            ],
            borderWidth: 1
        }]
    },
    options: {
        scales: {
            yAxes: [{
                ticks: {
                    beginAtZero:true
                }
            }]
        }
    }
});
    </script>

    <form action="#">
        <p>
            <input name="group1" type="radio" id="test1" />
            <label for="test1">Peso</label>
        </p>
        <p>
            <input name="group1" type="radio" id="test2" />
            <label for="test2">IMC</label>
        </p>
        <p>
            <input name="group1" type="radio" id="test3" />
            <label for="test3">% Grasa</label>
        </p>
        <p>
            <input name="group1" type="radio" id="test4" />
            <label for="test4">% Musculo</label>
        </p>
        <p>
            <input name="group1" type="radio" id="test5" />
            <label for="test5">Edad Metabologica</label>
        </p>
        <p>
            <input name="group1" type="radio" id="test6" />
            <label for="test6">Grasa Viceral</label>
        </p>
        <p>
            <input name="group1" type="radio" id="test7" />
            <label for="test7">% Agua</label>
        </p>
    </form>

    <footer class="page-footer">
        <div class="container">
            <div class="row">
                <div class="col l6 s12">
                    <h5 class="white-text">Clinica Nutricional</h5>
                </div>
                <div class="col l4 offset-l2 s12">
                    <h5 class="white-text">Links</h5>
                    <ul>
                        <li><a class="grey-text text-lighten-3" href="About.cshtml">About</a></li>
                        <li><a class="grey-text text-lighten-3" href="Help.cshtml">Help</a></li>
                        <li><a class="grey-text text-lighten-3" href="Recetas.cshtml">Recetas</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>

</body>

