@model List<NutriApp.Models.Appointment>
@{
    ViewBag.Title = "CitasCliente";
}

<body>
       <div id="google_translate_element"></div>
    <script type="text/javascript">
function googleTranslateElementInit() {
  new google.translate.TranslateElement({pageLanguage: 'en', layout: google.translate.TranslateElement.InlineLayout.SIMPLE}, 'google_translate_element');
}
    </script>
    <script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>

    <nav>
        <div class="nav-wrapper">
            <a href="#" class="brand-logo center">Logo</a>
            <ul id="nav-mobile" class="left hide-on-med-and-down">
                <li>@Html.ActionLink("Citas", "index", "CitasCliente", null, new { @class = "page-scroll" })</li>
                <li>@Html.ActionLink("Dieta", "index", "DietaCliente", null, new { @class = "page-scroll" })</li>
                <li>@Html.ActionLink("Recipes", "index", "RecetasCliente", null, new { @class = "page-scroll" })</li>
            </ul>
        </div>
    <nav>
        <div class="nav-wrapper">
            <a href="#" class="brand-logo center">Logo</a>
            <ul id="nav-mobile" class="left hide-on-med-and-down">
                <li>@Html.ActionLink("Citas", "index", "CitasCliente", null, new { @class = "page-scroll" })</li>
                <li>@Html.ActionLink("Dieta", "index", "DietaCliente", null, new { @class = "page-scroll" })</li>
                <li>@Html.ActionLink("Recetas", "index", "RecetasCliente", null, new { @class = "page-scroll" })</li>
            </ul>
            <ul id="nav-mobile2" class="right hide-on-med-and-down">
                <li><a class="dropdown-button" href="#!" data-activates="dropdown1">Idioma<i class="material-icons right"></i></a></li>
            </ul>
        </div>
    </nav>

    <div class="row">
        <div class="col-lg-12 text-center">
            <h1>Clinica Nutricional</h1>
            <h3>Citas</h3>
            <ul class="list-unstyled"></ul>
        </div>
    </div>

    <div class="row">
        <div class="input-field col s6">
            <input id="Usuario" type="text" class="validate">
            <label class="active" for="Usuario">Usuario</label><a class="waves-effect waves-light btn">Buscar</a>
        </div>
    </div>

    <script>
        $('.datepicker').pickadate({
            selectMonths: true, // Creates a dropdown to control month
            selectYears: 15 // Creates a dropdown of 15 years to control year
        });
    </script>
    <div class="row">
        <div class="input-field col s6">
            <input id="Fecha" type="date" class="datepicker">
            <label class="active" for="Fecha">Fecha</label><a class="waves-effect waves-light btn">Agregar</a>
            <label class="active" for="Fecha">Fecha</label><a class="waves-effect waves-light btn">Cancelar</a>
        </div>
    </div>

    <table class="striped">
        <thead>
            <tr>
                <th>Fecha</th>
                <th>UserID</th>
            </tr>
        </thead>

        @* ***Add table content*** *@
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Date)</td>
                    <td>@Html.DisplayFor(modelItem => item.UserID)</td>
                </tr>
            }
        </tbody>
    </table>

    <footer class="page-footer">
        <div class="container">
            <div class="row">
                <div class="col l6 s12">
                    <h5 class="white-text">Clinica Nutricional</h5>
                </div>
                <div class="col l4 offset-l2 s12">
                    <h5 class="white-text">Links</h5>
                    <ul>
                        <li><a class="grey-text text-lighten-3" href="About.cshtml">About</a></li>
                        <li><a class="grey-text text-lighten-3" href="Help.cshtml">Help</a></li>
                        <li><a class="grey-text text-lighten-3" href="Recetas.cshtml">Recetas</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>

</body>

